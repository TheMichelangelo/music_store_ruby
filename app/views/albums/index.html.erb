<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table class = "table table-striped">
  <thead class="thead-dark">
    <th>
      <th>Name</th>
      <th>Price</th>
      <th>Genre</th>
      <th>Musician</th>
      <th><%= link_to 'New Album', new_album_path, :class=>"btn btn-success"%></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.price %></td>
        <td><%= album.genre %></td>
        <td><%= album.musician.try(:name) %></td>
        <td><%= link_to 'Show', album ,:class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_album_path(album) ,:class=>"btn btn-default"%></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } ,:class =>'btn btn-danger btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>